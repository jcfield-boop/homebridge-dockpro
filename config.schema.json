{
  "pluginAlias": "SleepMeBasic",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Platform Name",
        "type": "string",
        "default": "SleepMe Basic",
        "required": true
      },
      "apiToken": {
        "title": "API Token",
        "type": "string",
        "format": "password",
        "description": "Your SleepMe API token (obtain from your account at sleep.me)",
        "required": true
      },
      "unit": {
        "title": "Temperature Unit",
        "type": "string",
        "default": "C",
        "enum": ["C", "F"],
        "enumNames": ["Celsius (°C)", "Fahrenheit (°F)"],
        "description": "Select preferred temperature unit"
      },
      "advanced": {
        "type": "object",
        "title": "Advanced Settings",
        "expandable": true,
        "expanded": false,
        "properties": {
          "debugMode": {
            "title": "Debug Mode",
            "type": "boolean",
            "default": false,
            "description": "Enable verbose logging for troubleshooting"
          },
          "pollingInterval": {
            "title": "Polling Interval",
            "type": "integer",
            "default": 60,
            "minimum": 30,
            "maximum": 300,
            "description": "How frequently to check device status (in seconds)"
          }
        }
      }
    },
    "required": ["apiToken"]
  }
}